# Add and remove dac_read_search capability from fluentd
%kolla ALL=(root) NOPASSWD: /opt/fluent/bin/fluent-cap-ctl --add dac_read_search
%kolla ALL=(root) NOPASSWD: /usr/sbin/setcap cap_dac_read_search-ep /opt/fluent/bin/ruby
%kolla ALL=(root) NOPASSWD: /usr/sbin/capsh --has-p=cap_dac_read_search
